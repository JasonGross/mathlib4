  refine Eq.congr (Finset.prod_congr rfl fun _ _ ‚Ü¶ ?_) rfl
  rw [‚Üê Real.log_rpow (hx _), Real.exp_log (Real.rpow_pos_of_pos (hx _) _), Real.norm_eq_abs,
    abs_of_pos (hx _), Real.rpow_natCast]


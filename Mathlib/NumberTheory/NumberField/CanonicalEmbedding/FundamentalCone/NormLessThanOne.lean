    PartialEquiv ({w : InfinitePlace K // w ‚â† w‚ÇÄ} ‚Üí ‚Ñù) (realSpace K) where
  toFun := fun c w ‚Ü¶ if hw : w = w‚ÇÄ then
      Real.exp (- ((w‚ÇÄ : InfinitePlace K).mult : ‚Ñù)‚Åª¬π * ‚àë w : {w // w ‚â† w‚ÇÄ}, c w)
    else Real.exp ((w.mult : ‚Ñù)‚Åª¬π * c ‚ü®w, hw‚ü©)

open Classical in
def realProdComplexProdEquiv :
    ({w : InfinitePlace K // IsReal w} ‚Üí ‚Ñù) √ó
      ({w : InfinitePlace K // IsComplex w} ‚Üí ‚Ñù √ó ‚Ñù) ‚âÉ‚Çú
        (realSpace K) √ó ({w : InfinitePlace K // IsComplex w} ‚Üí ‚Ñù) where

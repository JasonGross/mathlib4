/-- DOCSTRING -/
def mixedToReal (x : mixedSpace K) : realSpace K :=
    fun w ‚Ü¶ if hw : IsReal w then x.1 ‚ü®w, hw‚ü© else ‚Äñx.2 ‚ü®w, not_isReal_iff_isComplex.mp hw‚ü©‚Äñ

@[simp]

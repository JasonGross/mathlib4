@[to_additive Discrete.addMonoidalFunctorComp_isMonoidal]
instance Discrete.monoidalFunctorComp_isMonoidal (F : M ‚Üí* N) (G : N ‚Üí* K) :
    NatTrans.IsMonoidal (Discrete.monoidalFunctorComp F G).hom where


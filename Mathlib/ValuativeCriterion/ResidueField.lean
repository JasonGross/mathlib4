def Scheme.fromSpecResidueField (X : Scheme) (x : X) :
    Spec (X.residueField x) ‚ü∂ X :=
  Spec.map (CommRingCat.ofHom (LocalRing.residue _)) ‚â´ X.fromSpecStalk x

